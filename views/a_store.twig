<html>
    <head>
        <title>Single Store Page</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
    </head>
    <body>
        <h1>{{ store.getName }}</h1>

         {% if brands is not empty %}
          {% for brand in brands %}

          <h2>Here are our brands:</h2>

          <p>{{ brand.getName }}</p>

           <form action="/brands" method="post">
        <label for="brand_name">Select a brand</label>
        <input value="{{ store.getId }}" id="store_id" name="store_id" type="hidden">
        <select id="brand_id" name="brand_id" type="text">

            {% for brand in brands %}

        <option value="{{ brand.getId }}"> {{ brand.getName }} </option>
            {% endfor %}
        </select>
        <button type="submit">Add Brand</button>
        </form> 
         <p><a href="/stores">Go Back</a></p>
    </body>
</html>
