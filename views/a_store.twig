<html>
    <head>
        <title>Single store page</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
    </head>
    <body>
        <h1>{{ store.getName}}</h1>

        {% if brands is not empty %}
            <p>
                Here are the brands for this store:
            </p>
            <ul>
                {% for brand in brands %}
                    <li>{{ brand.getName }}</li>
                {% endfor %}
            </ul>
        {% endif %}

            <h4>Add a brand to this store:</h4>

            <form action="/add_brands" method="post">
                <input id="store_id" name="store_id" type="hidden" value="{{ store.getId}}">

                <label for="store_id">Select a store</label>
                <select id="store_id" name="store_id" type= "text">
                    {% for brand in brands %}
                        <option value="{{ brand.getId }}">{{ brand.getName }} </option>
                    {% endfor %}
                </select>
                <button type= "submit">Add brand</button>
            </form>

            <p><a href="/stores/{{ store.getId }}/edit">Edit this store</a></p>

            <p><a href='/'>Home</a></p>
            <p><a href="/stores">Go Back</a></p>
        </p>
    </body>
</html>
